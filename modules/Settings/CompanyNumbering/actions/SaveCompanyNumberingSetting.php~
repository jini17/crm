class Settings_CompanyNumbering_SaveAjax_Action extends Settings_Vtiger_Basic_Action {

	function __construct() {
        	$this->exposeMethod('saveCompanyNumbering');
    	}	

	public function process(Vtiger_Request $request) {
		$this->invokeExposedMethod($mode, $request);
	}
    
	public function saveCompanyNumbering(Vtiger_Request $request) {
		$db = PearDatabase::getInstance();
		$business = $request->('business');
		
		//update business in companynumbering  	
		$sSql = "UPDATE  secondcrm_companynumbering SET  business =?";
		$result= $db->pquery($sSql, array($business));		

		if($business == 1)
		{
			$sqlPre = "select * from vtiger_modentity_num where organization_id != 1 AND semodule IN ('Quotes','SalesOrder','PurchaseOrder','Invoice')";
			$resultPre = $db->pquery($sqlPre, array());
			$iNumRow = $db->num_rows($resultPre);
		
			if($iNumRow == 0 )
			{
				$sql = "select organization_id from vtiger_organizationdetails where organization_id != 1";
				$result = $adb->pquery($sql, array());
		
				$aCompanyList = array();
				$iOptionIndex = 0;
				$iMaxCompany = $adb->num_rows($result);
		
				for($iK=0;$iK<$iMaxCompany;$iK++)
				{
					$iOptionIndex++;
					$aCompanyList[$iOptionIndex]['id'] = $adb->query_result($result1,$iK,'organization_id');
				}

				$sql2 = "SELECT semodule,prefix FROM vtiger_modentity_num WHERE organization_id = 1 AND active = 1 AND semodule IN ('Quotes','SalesOrder','PurchaseOrder','Invoice')";
				$result2 = $adb->pquery($sql2, array());
		
				$aNumberingList = array();
				$iOptionIndex = 0;
				$iMaxNumbering = $adb->num_rows($result2);
		
				for($iK=0;$iK<$iMaxNumbering;$iK++)
				{
					$iOptionIndex++;
					$aNumberingList[$iOptionIndex]['semodule'] = $adb->query_result($result2,$iK,'semodule');
					$aNumberingList[$iOptionIndex]['prefix'] = $adb->query_result($result2,$iK,'prefix');

				}
		
				for($iK=1;$iK<=$iMaxCompany;$iK++)
				{
					for($iL=1;$iL<=$iMaxNumbering;$iL++)
					{
						$semodule = $aNumberingList[$iL]['semodule'];
						$id = $aCompanyList[$iK]['id'];
						$prefix = $aNumberingList[$iL]['prefix'].$id;
						$num_id++;
						$sql3 = "INSERT INTO vtiger_modentity_num (num_id,semodule , prefix, start_id, cur_id, active, organization_id) 
							VALUES ($num_id,'".$semodule."','".$prefix."',1,1,1,$id) ";
						$result3 = $adb->pquery($sql3, array());
					 }
				}
		
			}
		
		
		}
		else
		{	
			$sSql = "UPDATE  vtiger_companynumbering SET  business =  0 ";
			$result= $adb->pquery($sSql, array());
		
			$sqlDel = "DELETE FROM vtiger_modentity_num WHERE organization_id != 1";
			$result= $adb->pquery($sqlDel, array());
		}
		 $response = new Vtiger_Response();	
		 $response->setResult(array('success' => true));
		 $response->emit();
	}
}
	
	

	
	

		
	
	
}	
